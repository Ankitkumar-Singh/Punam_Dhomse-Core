<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Core Application</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/Style.css" rel="stylesheet" />
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-md  fixed-top navbar-light bg-light border-bottom box-shadow mb-3">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nav">
            <span class="navbar-toggler-icon bg-light"></span>
        </button>
        <div class=" navbar-collapse collapse " id="nav">
            <ul class="navbar-nav ">
                <li class="nav-item">
                    <a class="nav-link text-light font-weight-bold px-3">
                        <img src="~/images/img2.jpg" asp-append-version="true" />
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    @*Footer*@
    <div>
        @RenderBody()
        <footer class="main-footer bg-light">
            <p>&copy; @DateTime.Now.Year - All Rights Reserved</p>
        </footer>
    </div>
</body>
</html>