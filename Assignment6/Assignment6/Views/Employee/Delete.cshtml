@model Assignment6.Models.Employee

@{
    ViewData["Title"] = "Delete";
}

<br />
<div class="container mb-5 pt-5">
    <br />
    <div>
        <h3 class="text-danger  ">Are you sure you want to delete this?</h3>
        <hr />
        <div class="row">
            <div class="col-md-2">
                <b>@Html.DisplayNameFor(model => model.FirstName)</b>
            </div>
            <div class="col-md-1">
                :
            </div>
            <div class="col-md-2">
                @Html.DisplayFor(model => model.FirstName, new { @class = "form-control" })
            </div>
        </div>

        <div class="row">
            <div class="col-md-2">
                <b>@Html.DisplayNameFor(model => model.LastName)</b>
            </div>
            <div class="col-md-1">
                :
            </div>
            <div class="col-md-2">
                @Html.DisplayFor(model => model.LastName, new { @class = "form-control" })
            </div>
        </div>

        <div class="row">
            <div class="col-md-2">
                <b>@Html.DisplayNameFor(model => model.Email)</b>
            </div>
            <div class="col-md-1">
                :
            </div>
            <div class="col-md-2">
                @Html.DisplayFor(model => model.Email, new { @class = "form-control" })
            </div>
        </div>

        <div class="row">
            <div class="col-md-2">
                <b>@Html.DisplayNameFor(model => model.Department)</b>
            </div>
            <div class="col-md-1">
                :
            </div>
            <div class="col-md-2">
                @Html.DisplayFor(model => model.Department.Department, new { @class = "form-control" })
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color mt-5">
                <a asp-controller="Employee" asp-action="Index" class="btn btn-info">Cancel</a>
                <input type="submit" value="Delete" class="btn  btn-danger" />
            </div>
        }
    </div>
</div>